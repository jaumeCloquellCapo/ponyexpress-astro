---
import { t, type Lang } from '../data/i18n';
interface Props { lang: Lang; testimonials: Array<{ id: number; name: string; message: string }>; }
const { lang, testimonials } = Astro.props;
---
<section class="py-28 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-white to-pink/5">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-14 lg:gap-20 items-center">
      <div>
        <p class="text-sm font-semibold text-pink uppercase tracking-widest mb-4">{t(lang, 'testimonials.title')}</p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-ink leading-tight">{t(lang, 'testimonials.heading')}</h2>
      </div>
      <div class="space-y-8">
        {testimonials.map(({ id, message, name }) => (
          <blockquote class="relative p-8 md:p-10 rounded-3xl bg-white border border-ink/5 shadow-soft hover:shadow-soft-lg hover:border-pink/20 transition-all duration-300">
            <svg class="absolute top-6 left-6 w-12 h-12 text-pink/30 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 125"><path d="M30.7 42c0 6.1 12.6 7 12.6 22 0 11-7.9 19.2-18.9 19.2C12.7 83.1 5 72.6 5 61.5c0-19.2 18-44.6 29.2-44.6 2.8 0 7.9 2 7.9 5.4S30.7 31.6 30.7 42zM82.4 42c0 6.1 12.6 7 12.6 22 0 11-7.9 19.2-18.9 19.2-11.8 0-19.5-10.5-19.5-21.6 0-19.2 18-44.6 29.2-44.6 2.8 0 7.9 2 7.9 5.4S82.4 31.6 82.4 42z"/></svg>
            <p class="relative pl-2 text-ink/90 leading-relaxed text-base md:text-lg">{message}</p>
            <p class="mt-5 pl-2 font-semibold text-ink">{name}</p>
          </blockquote>
        ))}
      </div>
    </div>
  </div>
</section>
