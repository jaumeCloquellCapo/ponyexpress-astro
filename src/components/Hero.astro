---
import { t, type Lang } from '../data/i18n';
interface Props { lang: Lang; }
const { lang } = Astro.props;
const prefix = lang === 'en' ? '/en' : '';
---
<section class="relative min-h-[85vh] flex items-center overflow-hidden">
  <div class="absolute inset-0 bg-[url('/images/bk.jpeg')] bg-cover bg-center scale-105" role="img" aria-label={lang === 'es' ? 'Ponis de Pony Express Mallorca en la finca' : 'Pony Express Mallorca ponies at the farm'}></div>
  <!-- MÃ³vil: degradado fuerte para leer bien el texto -->
  <div class="absolute inset-0 bg-gradient-to-r from-white via-white/95 to-transparent md:hidden" aria-hidden="true"></div>
  <!-- Desktop: degradado suave solo a la izquierda, la foto se ve bien a la derecha -->
  <div class="absolute inset-0 hidden md:block bg-gradient-to-r from-white/85 from-[0%] via-white/25 via-[45%] to-transparent to-[70%]" aria-hidden="true"></div>
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="max-w-xl p-8 sm:p-10 rounded-3xl bg-white/95 backdrop-blur-sm shadow-soft-lg border border-ink/5">
      <p class="text-sm font-semibold text-turquoise uppercase tracking-widest mb-4">{t(lang, 'hero.badge')}</p>
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-ink leading-[1.1]">
        PONY EXPRESS<br /><span class="text-lime">Mallorca</span>
      </h1>
      <p class="mt-6 text-lg text-ink/90 leading-relaxed max-w-lg">
        {t(lang, 'hero.title')}
      </p>
      <a href={`${prefix}/contact`} class="mt-8 inline-flex items-center gap-2 px-6 py-4 rounded-2xl font-semibold text-white bg-coral hover:bg-coral-dark shadow-soft-lg hover:shadow-soft-lg hover:scale-[1.02] hover:-translate-y-1 transition-all duration-200">
        {t(lang, 'hero.cta')}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
      </a>
    </div>
  </div>
</section>
