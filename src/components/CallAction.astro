---
import { t, type Lang } from '../data/i18n';
interface Props { lang: Lang; }
const { lang } = Astro.props;
const prefix = lang === 'en' ? '/en' : '';
---
<section class="relative py-24 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-turquoise via-turquoise to-lime/80"></div>
  <div class="absolute inset-0 bg-dots opacity-20" aria-hidden="true"></div>
  <div class="relative z-10 max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-5xl font-bold text-white tracking-tight leading-tight">{t(lang, 'call.visit')}</h2>
    <p class="mt-6 text-lg md:text-xl text-white/95 max-w-2xl mx-auto leading-relaxed">{t(lang, 'call.visit_desc')}</p>
    <a href={`${prefix}/contact`} class="mt-10 inline-flex items-center gap-2 px-10 py-5 rounded-2xl font-semibold text-turquoise bg-white hover:bg-lime-light shadow-soft-lg hover:shadow-soft-lg hover:scale-[1.03] hover:-translate-y-1 transition-all duration-200 text-lg">
      {lang === 'es' ? 'Contacta con nosotros' : 'Contact us'}
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
    </a>
  </div>
</section>
