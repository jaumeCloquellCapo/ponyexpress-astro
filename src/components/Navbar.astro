---
import { t, type Lang } from '../data/i18n';
interface Props { lang: Lang; currentPath: string; }
const { lang, currentPath } = Astro.props;
const prefix = lang === 'en' ? '/en' : '';
const isHome = currentPath === '/' || currentPath === '/en' || currentPath === '/en/';
const isBirthday = currentPath.includes('birthday');
const isGallery = currentPath.includes('gallery');
const isContact = currentPath.includes('contact');
const otherLang = lang === 'en' ? 'es' : 'en';
const otherHref = lang === 'en' ? '/' : '/en';
---
<nav class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md border-b border-ink/5 shadow-soft">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-18">
      <a href={prefix || '/'} class="text-lg font-bold text-lime tracking-tight hover:text-lime-light transition-colors">Pony Express Mallorca</a>
      <button type="button" id="nav-toggle" class="md:hidden p-2 rounded-lg text-ink hover:bg-ink/5 transition-colors" aria-label="MenÃº">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
      <ul class="hidden md:flex items-center gap-1 text-sm font-medium text-ink">
        <li><a href={prefix || '/'} class={`px-3 py-2 rounded-lg transition-colors ${isHome ? 'bg-lime/15 text-lime' : 'hover:bg-ink/5 hover:text-lime'}`}>{lang === 'es' ? 'Inicio' : 'Home'}</a></li>
        <li><a href={`${prefix}/birthday`} class={`px-3 py-2 rounded-lg transition-colors ${isBirthday ? 'bg-lime/15 text-lime' : 'hover:bg-ink/5 hover:text-lime'}`}>{t(lang, 'birthday.title')}</a></li>
        <li><a href={`${prefix}/gallery`} class={`px-3 py-2 rounded-lg transition-colors ${isGallery ? 'bg-lime/15 text-lime' : 'hover:bg-ink/5 hover:text-lime'}`}>{t(lang, 'gallery.title')}</a></li>
        <li><a href={otherHref} class="px-3 py-2 rounded-lg hover:bg-ink/5 hover:text-lime transition-colors">{t(lang, `common.${otherLang}`)}</a></li>
        <li class="ml-2"><a href={`${prefix}/contact`} class="inline-flex items-center px-4 py-2.5 rounded-xl font-semibold text-white bg-coral hover:bg-coral-dark shadow-soft hover:shadow-soft-lg hover:-translate-y-0.5 transition-all">{t(lang, 'contact.title')}</a></li>
      </ul>
    </div>
    <div id="nav-drawer" class="hidden md:hidden pb-4">
      <ul class="space-y-1 text-ink">
        <li><a href={prefix || '/'} class="block px-4 py-3 rounded-xl hover:bg-lime/10 hover:text-lime transition-colors">{lang === 'es' ? 'Inicio' : 'Home'}</a></li>
        <li><a href={`${prefix}/birthday`} class="block px-4 py-3 rounded-xl hover:bg-lime/10 hover:text-lime transition-colors">{t(lang, 'birthday.title')}</a></li>
        <li><a href={`${prefix}/gallery`} class="block px-4 py-3 rounded-xl hover:bg-lime/10 hover:text-lime transition-colors">{t(lang, 'gallery.title')}</a></li>
        <li><a href={otherHref} class="block px-4 py-3 rounded-xl hover:bg-lime/10 hover:text-lime transition-colors">{t(lang, `common.${otherLang}`)}</a></li>
        <li class="pt-2"><a href={`${prefix}/contact`} class="flex justify-center mx-4 py-3 rounded-xl font-semibold text-white bg-coral hover:bg-coral-dark">{t(lang, 'contact.title')}</a></li>
      </ul>
    </div>
  </div>
</nav>
<script>
  const toggle = document.getElementById('nav-toggle');
  const drawer = document.getElementById('nav-drawer');
  toggle?.addEventListener('click', () => drawer?.classList.toggle('hidden'));
</script>
